<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FeetToMeter"
    android:orientation="vertical"
    android:background="@drawable/bgcon">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/linear4"
        android:layout_marginTop="58dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Convert Feet To Meter"
            android:textSize="30dp"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"/>

        <EditText
            android:id="@+id/meter_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:ems="10"
            android:inputType="number"
            android:minHeight="48dp"
            android:hint="Enter a number"
            android:textColor="@color/black"/>

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/m_feet"
            android:src="@drawable/viceversa"
            android:layout_gravity="center"
            />

        <Button
            android:id="@+id/feet_converter"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Convert to Meter"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/feet_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Press Convert"
            android:gravity="center"
            android:padding="2dp"
            android:layout_marginTop="20dp"
            android:textSize="30dp"
            android:textColor="@color/black"
            android:layout_gravity="center"/>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/linear4">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="15dp">

            <ImageView
                android:id="@+id/kg_g"
                android:layout_width="120dp"
                android:layout_height="120dp"
                app:srcCompat="@drawable/kgtog"
                android:layout_marginTop="25dp"/>

            <ImageView
                android:id="@+id/kg_pound"
                android:layout_width="120dp"
                android:layout_height="120dp"
                app:srcCompat="@drawable/kgtopound"
                android:layout_marginTop="25dp"/>

            <ImageView
                android:id="@+id/temp"
                android:layout_width="120dp"
                android:layout_height="120dp"
                app:srcCompat="@drawable/temp"
                android:layout_marginTop="25dp"/>

            <ImageView
                android:id="@+id/m_cm"
                android:layout_width="120dp"
                android:layout_height="120dp"
                app:srcCompat="@drawable/mtocm"
                android:layout_marginTop="25dp"/>

            <ImageView
                android:id="@+id/speed"
                android:layout_width="120dp"
                android:layout_height="120dp"
                app:srcCompat="@drawable/speed"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="25dp"/>
        </LinearLayout>

    </ScrollView>


</RelativeLayout>